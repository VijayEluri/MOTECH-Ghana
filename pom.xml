<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.motech</groupId>
	<artifactId>motech</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>MoTeCH Server</name>
	<description>A prototype system for the motech project.</description>

	<url>http://motech.rcg.usm.maine.edu/redmine/projects/show/motech</url>

	<developers>
		<developer>
			<id>batkinson</id>
			<name>Brent Atkinson</name>
			<timezone>-5</timezone>
			<email>batkinson@usm.maine.edu</email>
		</developer>
		<developer>
			<id>mblanch</id>
			<name>Matt Blanchette</name>
			<email>matt.blanchette@gmail.com</email>
		</developer>
	</developers>

	<ciManagement>
		<system>continuum</system>
		<url>http://motech.rcg.usm.maine.edu/continuum/</url>
		<notifiers>
			<notifier>
				<type>mail</type>
				<configuration>
					<address>batkinson@usm.maine.edu</address>
				</configuration>
			</notifier>
			<notifier>
				<type>mail</type>
				<configuration>
					<address>matt.blanchette@gmail.com</address>
				</configuration>
			</notifier>
		</notifiers>
	</ciManagement>

	<issueManagement>
		<system>redmine</system>
		<url>http://motech.rcg.usm.maine.edu/redmine/projects/motech/issues</url>
	</issueManagement>

	<modules>
		<module>motech-persist</module>
		<module>motech-core</module>
		<module>motech-webapp</module>
		<module>motech-app</module>
		<module>motech-wsclient</module>
		<module>motech-it</module>
	</modules>

	<repositories>
		<repository>
			<id>motech-repo</id>
			<name>Motech Maven Repository</name>
			<url>http://motech.rcg.usm.maine.edu/archiva/repository/all</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>motech-repo</id>
			<name>Motech Maven Repository</name>
			<url>http://motech.rcg.usm.maine.edu/archiva/repository/all</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>javax.persistence</groupId>
				<artifactId>persistence-api</artifactId>
				<version>1.0</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>javax.ejb</groupId>
				<artifactId>ejb-api</artifactId>
				<version>3.0</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>javax.servlet</groupId>
				<artifactId>servlet-api</artifactId>
				<version>2.5</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>commons-logging</groupId>
				<artifactId>commons-logging</artifactId>
				<version>1.0.4</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>sun-jaxws</groupId>
				<artifactId>jsr181-api</artifactId>
				<version>1.0</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>3.8.2</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>com.bm</groupId>
				<artifactId>ejb3unit</artifactId>
				<version>2.0.0-RC-1</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-ejb-plugin</artifactId>
					<configuration>
						<ejbVersion>3.0</ejbVersion>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>2.0-beta-9</version>
					<configuration>
						<preparationGoals>clean verify -DenableIT=true</preparationGoals>
						<remoteTagging>true</remoteTagging>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<scm>
		<url>https://motech.rcg.usm.maine.edu/redmine/repositories/browse/motech/branches/spring</url>
		<connection>scm:svn:https://motech.rcg.usm.maine.edu/svn/motech/branches/spring</connection>
		<developerConnection>scm:svn:https://motech.rcg.usm.maine.edu/svn/motech/branches/spring</developerConnection>
	</scm>

	<properties>
		<motech.webcontext>motech</motech.webcontext>
		<motech.wscontext>motechws</motech.wscontext>
		<jboss.home>${env.JBOSS_HOME}</jboss.home>
	</properties>

	<profiles>
		<profile>
			<id>ci</id>
			<activation>
				<file>
					<exists>/home/build/ci-server</exists>
				</file>
			</activation>
			<distributionManagement>
				<repository>
					<id>motech-dist</id>
					<name>Motech Releases Repository</name>
					<url>file:///home/build/repositories/internal</url>
				</repository>
				<snapshotRepository>
					<id>motech-dist</id>
					<name>Motech Snapshots Repository</name>
					<url>file:///home/build/repositories/snapshots</url>
				</snapshotRepository>
			</distributionManagement>
		</profile>
	</profiles>

</project>
