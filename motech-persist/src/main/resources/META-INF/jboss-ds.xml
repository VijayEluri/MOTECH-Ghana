<?xml version="1.0" encoding="UTF-8"?>
<datasources>
	<xa-datasource>
		<jndi-name>jdbc/motech</jndi-name>

		<!-- uncomment to enable interleaving <interleaving/> -->

		<isSameRM-override-value>false</isSameRM-override-value>
		<xa-datasource-class>org.apache.derby.jdbc.EmbeddedXADataSource</xa-datasource-class>

		<xa-datasource-property name="DatabaseName">${jboss.server.data.dir}${/}derby${/}/motech</xa-datasource-property>
		<xa-datasource-property name="User"></xa-datasource-property>
		<xa-datasource-property name="Password"></xa-datasource-property>
		<xa-datasource-property name="CreateDatabase">create</xa-datasource-property>
		<!--
			corresponding type-mapping in the standardjbosscmp-jdbc.xml
			(optional)
		-->
		<metadata>
			<type-mapping>Derby</type-mapping>
		</metadata>
	</xa-datasource>
</datasources>

