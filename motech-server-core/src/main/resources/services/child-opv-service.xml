<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="childOPVSchedule" class="org.motechproject.server.service.impl.ExpectedObsSchedule">
		<property name="name" value="OPV" />
		<property name="conceptName" value="ORAL POLIO VACCINATION DOSE" />
		<property name="lateValue" value="1" />
		<property name="latePeriod" value="week" />		
		<property name="registrarBean" ref="registrarBean" />
		<property name="requirements">
			<list>
				<bean class="org.motechproject.server.service.impl.AliveRequirement" />
				<bean class="org.motechproject.server.service.impl.AgeRequirement">
					<property name="maxValue" value="5" />
					<property name="maxPeriod" value="year" />
				</bean>
			</list>
		</property>
		<property name="events">
			<list>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="OPV0" />
					<property name="number" value="0" />
					<property name="dueValue" value="0" />
					<property name="duePeriod" value="day" />
					<property name="lateValue" value="2" />
					<property name="latePeriod" value="day" />
					<property name="maxValue" value="2" />
					<property name="maxPeriod" value="week" />					
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="OPV1" />
					<property name="number" value="1" />
					<property name="dueValue" value="6" />
					<property name="duePeriod" value="week" />
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="OPV2" />
					<property name="number" value="2" />
					<property name="dueValue" value="4" />
					<property name="duePeriod" value="week" />
					<property name="dueReferencePrevious" value="true" />		
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="OPV3" />
					<property name="number" value="3" />
					<property name="dueValue" value="4" />
					<property name="duePeriod" value="week" />
					<property name="dueReferencePrevious" value="true" />				
				</bean>
			</list>
		</property>
	</bean>

</beans>	
