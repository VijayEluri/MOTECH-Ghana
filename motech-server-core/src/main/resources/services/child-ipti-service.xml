<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="childIPTiSchedule" class="org.motechproject.server.service.impl.ExpectedObsSchedule">
		<property name="name" value="IPTI" />
		<property name="conceptName" value="IMMUNIZATIONS ORDERED" />
		<property name="valueConceptName" value="INTERMITTENT PREVENTATIVE TREATMENT INFANTS" />
		<property name="lateValue" value="1" />
		<property name="latePeriod" value="week" />		
		<property name="registrarBean" ref="registrarBean" />
		<property name="requirements">
			<list>
				<bean class="org.motechproject.server.service.impl.AliveRequirement" />
				<bean class="org.motechproject.server.service.impl.AgeRequirement">
					<property name="maxValue" value="5" />
					<property name="maxPeriod" value="year" />
				</bean>
			</list>
		</property>
		<property name="events">
			<list>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="IPTI1" />
					<property name="dueValue" value="10" />
					<property name="duePeriod" value="week" />				
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="IPTI2" />
					<property name="minValue" value="14" />
					<property name="minPeriod" value="week" />
					<property name="dueValue" value="4" />
					<property name="duePeriod" value="week" />
					<property name="dueReferencePrevious" value="true" />			
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="IPTI3" />
					<property name="minValue" value="9" />
					<property name="minPeriod" value="month" />
					<property name="dueValue" value="4" />
					<property name="duePeriod" value="week" />
					<property name="dueReferencePrevious" value="true" />			
				</bean>
			</list>
		</property>
	</bean>

</beans>	
