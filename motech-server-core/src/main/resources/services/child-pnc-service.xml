<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="childPNCSchedule" class="org.motechproject.server.service.impl.ExpectedEncounterSchedule">
		<property name="name" value="PNC" />
		<property name="encounterTypeName" value="PNCVISIT" />
		<property name="lateValue" value="1" />
		<property name="latePeriod" value="day" />
		<property name="registrarBean" ref="registrarBean" />	
		<property name="requirements">
			<list>
				<bean class="org.motechproject.server.service.impl.AliveRequirement" />
				<bean class="org.motechproject.server.service.impl.AgeRequirement">
					<property name="maxValue" value="1" />
					<property name="maxPeriod" value="month" />
				</bean>
			</list>
		</property>
		<property name="events">
			<list>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="PNC1" />
					<property name="dueValue" value="2" />
					<property name="duePeriod" value="day" />				
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="PNC2" />
					<property name="dueValue" value="7" />
					<property name="duePeriod" value="day" />				
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="PNC3" />
					<property name="dueValue" value="14" />
					<property name="duePeriod" value="day" />				
				</bean>
			</list>
		</property>
	</bean>

</beans>	
