<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="pregnancyIPTSchedule" class="org.motechproject.server.service.impl.ExpectedIPTObsSchedule">
		<property name="name" value="IPT" />
		<property name="conceptName" value="INTERMITTENT PREVENTATIVE TREATMENT DOSE" />
		<property name="lateValue" value="1" />
		<property name="latePeriod" value="week" />
		<property name="registrarBean" ref="registrarBean" />
		<property name="requirements">
			<list>
				<bean class="org.motechproject.server.service.impl.AliveRequirement" />
			</list>
		</property>
		<property name="events">
			<list>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="IPT1" />
					<property name="number" value="1" />
					<!-- 13 weeks in pregnancy -->
					<property name="minValue" value="13" />
					<property name="minPeriod" value="week" />
					<!-- 14 to 16 weeks in pregnancy -->
					<property name="dueValue" value="14" />
					<property name="duePeriod" value="week" />
					<property name="lateValue" value="2" />
					<property name="latePeriod" value="week" />					
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="IPT2" />
					<property name="number" value="2" />
					<property name="dueValue" value="4" />
					<property name="duePeriod" value="week" />
					<property name="dueReferencePrevious" value="true" />				
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="IPT3" />
					<property name="number" value="3" />
					<property name="dueValue" value="4" />
					<property name="duePeriod" value="week" />
					<property name="dueReferencePrevious" value="true" />
				</bean>
			</list>
		</property>
	</bean>

</beans>	
