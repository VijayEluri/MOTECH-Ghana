<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="pregnancyPPCSchedule" class="org.motechproject.server.service.impl.ExpectedPPCEncounterSchedule">
		<property name="name" value="PPC" />
		<property name="encounterTypeName" value="PPCVISIT" />
		<property name="lateValue" value="1" />
		<property name="latePeriod" value="day" />
		<property name="maxDeliveryValue" value="1" />
		<property name="maxDeliveryPeriod" value="month" />
		<property name="registrarBean" ref="registrarBean" />
		<property name="requirements">
			<list>
				<bean class="org.motechproject.server.service.impl.AliveRequirement" />
			</list>
		</property>
		<property name="events">
			<list>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="PPC1" />
					<property name="dueValue" value="2" />
					<property name="duePeriod" value="day" />				
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="PPC2" />
					<property name="dueValue" value="7" />
					<property name="duePeriod" value="day" />				
				</bean>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="PPC3" />
					<property name="dueValue" value="14" />
					<property name="duePeriod" value="day" />				
				</bean>
			</list>
		</property>
	</bean>

</beans>	
