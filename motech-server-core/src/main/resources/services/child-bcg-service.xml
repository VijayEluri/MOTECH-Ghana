<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="childBCGSchedule"
		class="org.motechproject.server.service.impl.ExpectedObsSchedule">
		<property name="name" value="BCG" />
		<property name="conceptName" value="IMMUNIZATIONS ORDERED" />
		<property name="valueConceptName" value="BACILLE CAMILE-GUERIN VACCINATION" />
		<property name="registrarBean" ref="registrarBean" />
		<property name="requirements">
			<list>
				<bean class="org.motechproject.server.service.impl.AliveRequirement" />
				<bean class="org.motechproject.server.service.impl.AgeRequirement">
					<property name="maxValue" value="1" />
					<property name="maxPeriod" value="year" />
				</bean>
			</list>
		</property>
		<property name="events">
			<list>
				<bean class="org.motechproject.server.service.ExpectedCareEvent">
					<property name="name" value="BCG" />
					<property name="minValue" value="0" />
					<property name="minPeriod" value="day" />
					<property name="dueValue" value="0" />
					<property name="duePeriod" value="day" />
					<property name="lateValue" value="2" />
					<property name="latePeriod" value="day" />
					<property name="maxValue" value="1" />
					<property name="maxPeriod" value="year" />
				</bean>
			</list>
		</property>
	</bean>

</beans>	
