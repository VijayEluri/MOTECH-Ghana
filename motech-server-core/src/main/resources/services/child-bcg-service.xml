<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="childBCGService" class="org.motechproject.server.service.impl.ServiceDeliverySequenceObsImpl">
		<property name="name" value="BCG" />
		<property name="serviceConceptName" value="IMMUNIZATIONS ORDERED" />
		<property name="serviceValueConceptName" value="BACILLE CAMILE-GUERIN VACCINATION" />
		<property name="timeBean" ref="timeBean" />
		<property name="registrarBean" ref="registrarBean" />
		<property name="requirements">
			<list>
				<bean class="org.motechproject.server.service.impl.AgeRequirement">
					<property name="maxTimeValue" value="1" />
					<property name="maxTimePeriod" value="year" />
					<property name="timeBean" ref="timeBean" />
				</bean>
			</list>
		</property>
		<property name="services">
			<list>
				<bean class="org.motechproject.server.service.impl.ServiceDeliveryImpl">
					<property name="name" value="BCG1" />
					<property name="startTimeValue" value="0" />
					<property name="startTimePeriod" value="day" />
					<property name="startTimeReference" value="patient_birthdate" />
					<property name="endTimeValue" value="2" />
					<property name="endTimePeriod" value="day" />
					<property name="endTimeReference" value="patient_birthdate" />
					<property name="latestTimeValue" value="1" />
					<property name="latestTimePeriod" value="year" />
					<property name="latestTimeReference" value="patient_birthdate" />
				</bean>
			</list>
		</property>
	</bean>

</beans>	
